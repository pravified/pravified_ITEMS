<div class="container">
	<div style="padding: 10px; margin-bottom: 10px;"><a href="#" onclick="returnHome()" class="text-info stretched-link"><i class="fa fa-solid fa-arrow-left"></i>&nbsp;Back</a><br/></div>
	<button class="btn btn-success" onClick="addHWItem();"><i class="fa fa-solid fa-plus"></i> Add Item</button>
	<br/><br/>
		<table class="table table-striped table-bordered">
			{{#if data}}
			<thead>
				<tr>
					<th>Name</th>
					<th>Type</th>
					<th>Brand</th>
					<th>Model Number</th>
					<th>Date Acquired</th>
					<th>Employee Assigned To</th>
					<th>Condition</th>
					<th>Cost</th>
					<th>Location</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			{{else}}
			<tr><td colspan="3">Inventory empty</td></tr>
			{{/if}}
			<tbody>
				{{#each data}}
					<tr>
						<td>{{this.name}}</td>
						<td>{{this.type}}</td>
						<td>{{this.brand}}</td>
						<td>{{this.modelNum}}</td>
						<td>{{this.acqDate}}</td>
						<td>{{this.employee}}</td>
						<td>{{this.condition}}</td>
						<td>{{this.cost}}</td>
						<td>{{this.location}}</td>
						<td>
							<!-- Update -->
							<button type="button" class="btn btn-default btn-sm">
							<a href="/inventory/update/{{this.id}}"><i class="fa fa-solid fa-pencil" aria-hidden="true"></i></a>
							</button>
						</td>
						<td>
							<!-- Remove -->
							<button type="button" class="btn btn-default btn-sm">
							<a href="/inventory/remove/{{this.id}}"><i class="fa fa-solid fa-trash" aria-hidden="true"></i> </a>
							</button> 
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
</div>

