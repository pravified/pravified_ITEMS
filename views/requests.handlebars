<div class="container">
	<div style="padding: 10px; margin-bottom: 10px;"><a href="#" onclick="returnHome()" class="text-info stretched-link"><i class="fa fa-solid fa-arrow-left"></i>&nbsp;Back</a><br/></div>
		<table class="table table-striped table-bordered">
			{{#if data}}
			<thead>
				<tr>
					<th>Full Name</th>
					<th>Requested Item</th>
					<th>Date Needed By</th>
					<th>Location</th>
					<th>Justification</th>
					<th></th>
				</tr>
			</thead>
			{{else}}
			<tr><td colspan="3">No requests available</td></tr>
			{{/if}}
			<tbody>
				{{#each data}}
					<tr>
						<td>{{this.fullname}}</td>
						<td>{{this.reqItem}}</td>
						<td>{{this.needBy}}</td>
						<td>{{this.location}}</td>
						<td>{{this.justification}}</td>
						<td>
							<!-- View Individual Request -->
							<button type="button" class="btn btn-default btn-sm">
							<a href="/requests/view/{{this.id}}"><i class="fa fa-solid fa-eye" aria-hidden="true"></i> </a>
							</button> 						
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
</div>

